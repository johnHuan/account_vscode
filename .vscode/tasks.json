			"type": "cppbuild",
			"label": "C/C++:gcc.exe_label_main",
			"command": "C:\\code\\install_package\\mingw64\\bin\\gcc.exe",			
			"args": [
				"-fdiagnostics-color=always",
				"src/*.cpp",
				"-g",
				"${cwd}\\app\\*.cpp",
				"-I",
				"src",
				"-lwinmm",
				"-lws2_32",
